# Generated by ansible.
{% if pacemaker_running.stdout == 'active' %}

conn overcloud-{{ current_vip.key }}-vip-tunnel
    left={{ current_vip.value }}
    leftid=@{{ current_vip.key }}vip
    right=%any
    rightid=@overcloud{{ current_vip.key }}cluster
    authby=secret
    auto=add
    dpdaction=hold
    dpddelay=5
    dpdtimeout=15
    phase2alg={{ ipsec_algorithm }}

{% endif %}

conn overcloud-{{ current_vip.key }}-node-to-vip-tunnel
    left={{ current_ip }}
    leftid=@overcloud{{ current_vip.key }}cluster
    right={{ current_vip.value }}
    rightid=@{{ current_vip.key }}vip
    authby=secret
    auto=start
    dpdaction=hold
    dpddelay=5
    dpdtimeout=15
    phase2alg={{ ipsec_algorithm }}
