# Generated by ansible.
{% if pacemaker_running.stdout == 'active' %}
{% for controller_outer_unsplit in controllers %}
{% for controller_inner_unsplit in controllers %}
{% if controller_outer_unsplit != controller_inner_unsplit %}
{% set controller_outer = controller_outer_unsplit.split(',') %}
{% set controller_inner = controller_inner_unsplit.split(',') %}

conn overcloud-controller-to-controller-tunnel-{{ loop.index0 }}
    left={{ controller_outer[1] }}
    leftid=@{{ controller_outer[0] }}
    right={{ controller_inner[1] }}
    rightid=@{{ controller_inner[0] }}
    authby=secret
    auto=start
{% endif %}
{% endfor %}
{% endfor %}

conn overcloud-controller-to-compute-tunnel
    left={{ current_ip }}
    leftid=@{{ ansible_hostname }}.internalapi
    right=%any
    rightid=@computecluster
    authby=secret
    auto=add
{% else %}
{% for controller_unsplit in controllers %}
{% set controller = controller_unsplit.split(',') %}

conn overcloud-controller-to-compute-tunnel-{{ loop.index0 }}
    left={{ current_ip }}
    leftid=@computecluster
    right={{ controller[1] }}
    rightid=@{{ controller[0] }}
    authby=secret
    auto=start
{% endfor %}
{% endif %}
