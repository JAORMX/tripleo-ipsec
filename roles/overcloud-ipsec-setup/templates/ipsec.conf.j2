# Generated by ansible.
{% if pacemaker_running.stdout == 'active' %}
{% for controller_unsplit in controllers %}
{% set controller = controller_unsplit.split(',') %}
{% if controller[0] != (ansible_hostname + '.internalapi') %}

conn overcloud-controller-to-controller-tunnel-{{ loop.index0 }}
    left={{ current_ip }}
    leftid=@{{ ansible_hostname }}.internalapi
    right={{ controller[1] }}
    rightid=@{{ controller[0] }}
    authby=secret
    auto=start
{% endif %}
{% endfor %}

conn overcloud-controller-to-compute-tunnel
    left={{ current_ip }}
    leftid=@{{ ansible_hostname }}.internalapi
    right=%any
    rightid=@computecluster
    authby=secret
    auto=add

conn overcloud-vip-tunnel
    left={{ internal_api_vip }}
    leftid=@internalapivip
    right=%any
    rightid=@overcloudcluster
    authby=secret
    auto=add
{% else %}
{% for controller_unsplit in controllers %}
{% set controller = controller_unsplit.split(',') %}

conn overcloud-controller-to-compute-tunnel-{{ loop.index0 }}
    left={{ current_ip }}
    leftid=@computecluster
    right={{ controller[1] }}
    rightid=@{{ controller[0] }}
    authby=secret
    auto=start
{% endfor %}
{% endif %}

conn overcloud-node-to-vip-tunnel
    left={{ current_ip }}
    leftid=@overcloudcluster
    right={{ internal_api_vip }}
    rightid=@internalapivip
    authby=secret
    auto=start
