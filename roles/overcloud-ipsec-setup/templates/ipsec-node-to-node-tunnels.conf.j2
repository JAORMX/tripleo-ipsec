# Generated by ansible.
{% if pacemaker_running.stdout == 'active' %}
{% for controller_unsplit in controllers %}
{% set controller = controller_unsplit.split(',') %}
{% if controller[0] != (ansible_hostname + '.internalapi') %}

conn overcloud-internalapi-controller-to-controller-tunnel-{{ loop.index0 }}
    left={{ current_ip }}
    leftid=@{{ ansible_hostname }}.internalapi
    right={{ controller[1] }}
    rightid=@{{ controller[0] }}
    authby=secret
    auto=route
    dpdaction=hold
    dpddelay=5
    dpdtimeout=15
    phase2alg={{ ipsec_algorithm }}
{% endif %}
{% endfor %}

conn overcloud-internalapi-controller-to-compute-tunnel
    left={{ current_ip }}
    leftid=@{{ ansible_hostname }}.internalapi
    right=%any
    rightid=@computecluster
    authby=secret
    auto=add
    dpdaction=hold
    dpddelay=5
    dpdtimeout=15
    phase2alg={{ ipsec_algorithm }}

{% else %}
{% for controller_unsplit in controllers %}
{% set controller = controller_unsplit.split(',') %}

conn overcloud-internalapi-controller-to-compute-tunnel-{{ loop.index0 }}
    left={{ current_ip }}
    leftid=@computecluster
    right={{ controller[1] }}
    rightid=@{{ controller[0] }}
    authby=secret
    auto=route
    dpdaction=hold
    dpddelay=5
    dpdtimeout=15
    phase2alg={{ ipsec_algorithm }}
{% endfor %}
{% endif %}
